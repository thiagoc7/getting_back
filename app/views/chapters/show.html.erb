<!-- Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold mb-2"><%= @chapter.title %></h1>
      <p class="text-base-content/70">Chapter from "<%= @book.title %>"</p>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_book_chapter_path(@book, @chapter), class: "btn btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
      <%= link_to book_chapters_path(@book), class: "btn btn-ghost" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Chapters
      <% end %>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Chapter Content -->
  <div class="lg:col-span-2">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-6">Chapter Content</h2>
        
        <div class="prose max-w-none">
          <% if @chapter.content.present? %>
            <div class="whitespace-pre-wrap text-base leading-relaxed"><%= @chapter.content %></div>
          <% else %>
            <p class="text-base-content/50 italic">No content available for this chapter.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Chapter Info -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title mb-4">Chapter Information</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-base-content/70">Created</span>
            <span class="font-medium"><%= @chapter.created_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-base-content/70">Last Updated</span>
            <span class="font-medium"><%= @chapter.updated_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-base-content/70">Photos</span>
            <span class="font-medium">
              <% if @chapter.photos.attached? %>
                <%= @chapter.photos.count %> photos
              <% else %>
                No photos
              <% end %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title mb-4">Actions</h3>
        <div class="space-y-3">
          <%= link_to edit_book_chapter_path(@book, @chapter), class: "btn btn-primary w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Chapter
          <% end %>
          
          <%= link_to book_chapters_path(@book), class: "btn btn-outline w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Chapters
          <% end %>
          
          <%= link_to "Delete Chapter", book_chapter_path(@book, @chapter), 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this chapter?" }, 
              class: "btn btn-error w-full" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Photos Section -->
<% if @chapter.photos.attached? %>
  <div class="mt-8">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-6">Photos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @chapter.photos.each do |photo| %>
            <div class="card bg-base-200">
              <figure>
                <%= image_tag photo, class: "w-full h-48 object-cover" %>
              </figure>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
