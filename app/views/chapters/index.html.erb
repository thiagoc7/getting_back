<!-- Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold mb-2">Chapters</h1>
      <p class="text-base-content/70">Chapters for "<%= @book.title %>"</p>
    </div>
    <div class="flex gap-2">
      <%= link_to new_book_chapter_path(@book), class: "btn btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Chapter
      <% end %>
      <%= link_to book_path(@book), class: "btn btn-ghost" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Book
      <% end %>
    </div>
  </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="stat bg-base-100 shadow">
    <div class="stat-figure text-primary">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
    </div>
    <div class="stat-title">Total Chapters</div>
    <div class="stat-value text-primary"><%= @chapters.count %></div>
  </div>
  
  <div class="stat bg-base-100 shadow">
    <div class="stat-figure text-success">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
    </div>
    <div class="stat-title">With Photos</div>
    <div class="stat-value text-success"><%= @chapters.joins(:photos_attachments).distinct.count %></div>
  </div>
  
  <div class="stat bg-base-100 shadow">
    <div class="stat-figure text-secondary">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
    </div>
    <div class="stat-title">Latest Chapter</div>
    <div class="stat-value text-secondary">
      <% if @chapters.any? %>
        <%= @chapters.order(:created_at).last.created_at.strftime("%b %d") %>
      <% else %>
        None
      <% end %>
    </div>
  </div>
</div>

<!-- Chapters Section -->
<div class="bg-base-100 rounded-lg shadow">
  <div class="p-6 border-b border-base-300">
    <h2 class="text-xl font-semibold">All Chapters</h2>
  </div>
  
  <% if @chapters.any? %>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Chapter</th>
            <th>Content Preview</th>
            <th>Photos</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @chapters.each do |chapter| %>
            <tr>
              <td>
                <div class="flex items-center space-x-3">
                  <div class="avatar placeholder">
                    <div class="bg-info text-info-content rounded w-8 h-10">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                    </div>
                  </div>
                  <div>
                    <div class="font-bold"><%= chapter.title %></div>
                  </div>
                </div>
              </td>
              <td>
                <% if chapter.content.present? %>
                  <div class="text-sm opacity-70 truncate max-w-xs"><%= chapter.content.truncate(100) %></div>
                <% else %>
                  <span class="text-gray-400">No content</span>
                <% end %>
              </td>
              <td>
                <% if chapter.photos.attached? %>
                  <span class="badge badge-success"><%= chapter.photos.count %> photos</span>
                <% else %>
                  <span class="text-gray-400">No photos</span>
                <% end %>
              </td>
              <td><%= chapter.created_at.strftime("%b %d, %Y") %></td>
              <td>
                <div class="flex items-center space-x-2">
                  <%= link_to book_chapter_path(@book, chapter), class: "btn btn-xs btn-info" do %>
                    View
                  <% end %>
                  <%= link_to edit_book_chapter_path(@book, chapter), class: "btn btn-xs btn-warning" do %>
                    Edit
                  <% end %>
                  <%= link_to "Delete", book_chapter_path(@book, chapter), 
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                      class: "btn btn-xs btn-error" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-12 text-center">
      <div class="w-16 h-16 bg-base-200 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-base-content/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium mb-2">No chapters yet</h3>
      <p class="text-base-content/70 mb-6">Get started by adding your first chapter to this book.</p>
      <%= link_to new_book_chapter_path(@book), class: "btn btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add your first chapter
      <% end %>
    </div>
  <% end %>
</div>
