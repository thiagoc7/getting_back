<% content_for :title, @book.title %>

<div class="flex h-screen bg-gray-50">
  <!-- Sidebar -->
  <aside class="w-64 bg-white border-r border-gray-200 flex-shrink-0">
    <div class="flex items-center justify-between h-16 px-4 border-b border-gray-200">
      <div class="flex items-center">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <span class="ml-2 text-xl font-semibold text-gray-900">Library</span>
      </div>
    </div>
    
    <nav class="p-4">
      <ul class="space-y-2">
        <li>
          <%= link_to books_path, class: "flex items-center px-4 py-2 text-blue-600 bg-blue-50 rounded-lg" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
            </svg>
            Books
          <% end %>
        </li>
        <li>
          <a href="#" class="flex items-center px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Authors
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Analytics
          </a>
        </li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col min-w-0">
    <!-- Top Navigation -->
    <header class="bg-white border-b border-gray-200 h-16 flex items-center justify-between px-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Book Details</h1>
        <p class="text-sm text-gray-500">View book information</p>
      </div>
      <div class="flex items-center space-x-4">
        <%= link_to books_path, class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Library
        <% end %>
      </div>
    </header>

    <!-- Page Content -->
    <main class="flex-1 p-6 overflow-auto">
      <% if notice.present? %>
        <div class="mb-6 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg">
          <%= notice %>
        </div>
      <% end %>

      <!-- Book Details -->
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <!-- Book Header -->
        <div class="px-6 py-6 border-b border-gray-200">
          <div class="flex items-start space-x-4">
            <div class="w-16 h-20 bg-gradient-to-br from-blue-100 to-blue-200 rounded flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h1 class="text-2xl font-semibold text-gray-900 mb-1"><%= @book.title %></h1>
              <p class="text-lg text-gray-600 mb-2">by <%= @book.author %></p>
              <% if @book.published_at.present? %>
                <p class="text-sm text-gray-500">Published <%= @book.published_at.strftime("%B %d, %Y") %></p>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Book Information -->
        <div class="px-6 py-6">
          <% if @book.description.present? %>
            <div class="mb-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Description</h3>
              <div class="prose prose-gray max-w-none">
                <p class="text-gray-700 leading-relaxed"><%= @book.description %></p>
              </div>
            </div>
          <% end %>

          <!-- Book Stats -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-sm font-medium text-gray-600">Status</p>
              <p class="text-lg font-semibold text-gray-900">
                <% if @book.published_at.present? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Published
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Draft
                  </span>
                <% end %>
              </p>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-sm font-medium text-gray-600">Created</p>
              <p class="text-lg font-semibold text-gray-900"><%= @book.created_at.strftime("%B %d, %Y") %></p>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-sm font-medium text-gray-600">Last Updated</p>
              <p class="text-lg font-semibold text-gray-900"><%= @book.updated_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
            <%= link_to edit_book_path(@book), class: "inline-flex items-center justify-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Book
            <% end %>
            
            <%= button_to @book, method: :delete, class: "inline-flex items-center justify-center px-4 py-2 bg-red-100 hover:bg-red-200 text-red-700 text-sm font-medium rounded-lg transition-colors duration-200", data: { turbo_confirm: "Are you sure you want to delete this book?" } do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete Book
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
