<!-- Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold mb-2"><%= @book.title %></h1>
      <p class="text-base-content/70">by <%= @book.author %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_book_path(@book), class: "btn btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
      <%= link_to books_path, class: "btn btn-ghost" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      <% end %>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Book Info Card -->
  <div class="lg:col-span-2">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-6">Book Information</h2>
        
        <div class="space-y-6">
          <!-- Title -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-base-content/70">Title</h3>
              <p class="text-lg font-medium"><%= @book.title %></p>
            </div>
          </div>

          <!-- Author -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-base-content/70">Author</h3>
              <p class="text-lg font-medium"><%= @book.author %></p>
            </div>
          </div>

          <!-- Status -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-base-content/70">Status</h3>
              <% if @book.published? %>
                <span class="badge badge-success badge-lg">Published</span>
              <% else %>
                <span class="badge badge-warning badge-lg">Draft</span>
              <% end %>
            </div>
          </div>

          <!-- Published Date -->
          <% if @book.published_at %>
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-info/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-base-content/70">Published Date</h3>
                <p class="text-lg font-medium"><%= @book.published_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          <% end %>

          <!-- Description -->
          <% if @book.description.present? %>
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-info/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-base-content/70">Description</h3>
                <p class="text-base leading-relaxed"><%= @book.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Quick Stats -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title mb-4">Quick Stats</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-base-content/70">Created</span>
            <span class="font-medium"><%= @book.created_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-base-content/70">Last Updated</span>
            <span class="font-medium"><%= @book.updated_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-base-content/70">Days Since Created</span>
            <span class="font-medium"><%= ((Time.current - @book.created_at) / 1.day).round %> days</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title mb-4">Actions</h3>
        <div class="space-y-3">
          <%= link_to edit_book_path(@book), class: "btn btn-primary w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Book
          <% end %>
          
          <%= link_to books_path, class: "btn btn-outline w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to List
          <% end %>
          
          <%= link_to book_path(@book), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this book?" }, 
              class: "btn btn-error w-full" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Book
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
