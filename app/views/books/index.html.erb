<!-- Dashboard Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold mb-2">Dashboard</h1>
  <p class="text-base-content/70">Manage your book collection</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="stat bg-base-100 shadow">
    <div class="stat-figure text-primary">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
    </div>
    <div class="stat-title">Total Books</div>
    <div class="stat-value text-primary"><%= @books.count %></div>
  </div>
  
  <div class="stat bg-base-100 shadow">
    <div class="stat-figure text-success">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
    <div class="stat-title">Published</div>
    <div class="stat-value text-success"><%= @books.published.count %></div>
  </div>
  
  <div class="stat bg-base-100 shadow">
    <div class="stat-figure text-secondary">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
    </div>
    <div class="stat-title">Authors</div>
    <div class="stat-value text-secondary"><%= @books.distinct.count(:author) %></div>
  </div>
</div>

<!-- Books Section -->
<div class="bg-base-100 rounded-lg shadow">
  <div class="p-6 border-b border-base-300 flex justify-between items-center">
    <h2 class="text-xl font-semibold">All Books</h2>
    <%= link_to new_book_path, class: "btn btn-primary btn-sm" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Book
    <% end %>
  </div>
  
  <% if @books.any? %>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Book</th>
            <th>Author</th>
            <th>Status</th>
            <th>Published</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <div class="flex items-center space-x-3">
                  <div class="avatar placeholder">
                    <div class="bg-primary text-primary-content rounded w-8 h-10">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                      </svg>
                    </div>
                  </div>
                  <div>
                    <div class="font-bold"><%= book.title %></div>
                    <% if book.description.present? %>
                      <div class="text-sm opacity-50 truncate max-w-xs"><%= book.description %></div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= book.author %></td>
              <td>
                <% if book.published? %>
                  <span class="badge badge-success">Published</span>
                <% else %>
                  <span class="badge badge-warning">Draft</span>
                <% end %>
              </td>
              <td>
                <% if book.published_at %>
                  <%= book.published_at.strftime("%B %Y") %>
                <% else %>
                  <span class="text-gray-400">Not published</span>
                <% end %>
              </td>
              <td>
                <div class="flex items-center space-x-2">
                  <%= link_to book, class: "btn btn-xs btn-info" do %>
                    View
                  <% end %>
                  <%= link_to edit_book_path(book), class: "btn btn-xs btn-warning" do %>
                    Edit
                  <% end %>
                  <%= link_to book_path(book), 
                      method: :delete, 
                      data: { confirm: "Are you sure?" }, 
                      class: "btn btn-xs btn-error" do %>
                    Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-12 text-center">
      <div class="w-16 h-16 bg-base-200 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-base-content/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium mb-2">No books yet</h3>
      <p class="text-base-content/70 mb-6">Get started by adding your first book to the library.</p>
      <%= link_to new_book_path, class: "btn btn-primary" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add your first book
      <% end %>
    </div>
  <% end %>
</div>
