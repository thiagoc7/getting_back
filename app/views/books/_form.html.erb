<%= form_with(model: book, class: "space-y-6") do |form| %>
  <div class="form-control w-full">
    <%= form.label :title, "Título", class: "label" %>
    <%= form.text_field :title, 
        class: "input input-bordered w-full #{book.errors[:title].any? ? 'input-error' : ''}", 
        placeholder: "Digite o título do livro" %>
    <% if book.errors[:title].any? %>
      <div class="label">
        <span class="label-text-alt text-error">
          <%= book.errors[:title].join(', ') %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="form-control w-full">
    <%= form.label :author, "Autor", class: "label" %>
    <%= form.text_field :author, 
        class: "input input-bordered w-full #{book.errors[:author].any? ? 'input-error' : ''}", 
        placeholder: "Digite o nome do autor" %>
    <% if book.errors[:author].any? %>
      <div class="label">
        <span class="label-text-alt text-error">
          <%= book.errors[:author].join(', ') %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="form-control w-full">
    <%= form.label :description, "Descrição", class: "label" %>
    <%= form.text_area :description, 
        rows: 4, 
        class: "textarea textarea-bordered w-full #{book.errors[:description].any? ? 'textarea-error' : ''}", 
        placeholder: "Digite uma breve descrição do livro" %>
    <% if book.errors[:description].any? %>
      <div class="label">
        <span class="label-text-alt text-error">
          <%= book.errors[:description].join(', ') %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="form-control w-full">
    <%= form.label :status, "Status", class: "label" %>
    <%= form.select :status, 
        Book.statuses.map { |key, value| [key.humanize, key] }, 
        { selected: book.status || 'draft' }, 
        { class: "select select-bordered w-full #{book.errors[:status].any? ? 'select-error' : ''}" } %>
    <% if book.errors[:status].any? %>
      <div class="label">
        <span class="label-text-alt text-error">
          <%= book.errors[:status].join(', ') %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="form-control w-full">
    <%= form.label :published_at, "Data de Publicação", class: "label" %>
    <%= form.date_field :published_at, 
        class: "input input-bordered w-full #{book.errors[:published_at].any? ? 'input-error' : ''}" %>
    <% if book.errors[:published_at].any? %>
      <div class="label">
        <span class="label-text-alt text-error">
          <%= book.errors[:published_at].join(', ') %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="flex gap-4">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", books_path, class: "btn btn-ghost" %>
  </div>
<% end %>
